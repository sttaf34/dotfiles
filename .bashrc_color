# https://misc.flogisoft.com/bash/tip_colors_and_formatting

# 黒背景で見やすい色を定義しておく
RED="$(tput setaf 9)"
GREEN="$(tput setaf 10)"
YELLOW="$(tput setaf 11)"
PINK="$(tput setaf 13)"
ORANGE="$(tput setaf 209)"
RESET="$(tput sgr0)"

# PS1設定用
_RED="\[$(tput setaf 9)\]"
_GREEN="\[$(tput setaf 10)\]"
_YELLOW="\[$(tput setaf 11)\]"
_PINK="\[$(tput setaf 13)\]"
_ORANGE="\[$(tput setaf 209)\]"
_RESET="\[$(tput sgr0)\]"

# 色の表がある -> http://nemoplus.hateblo.jp/entry/20090119/1232373540
export CLICOLOR=1
export LSCOLORS=fxGxbxdxbxegedabagacad
